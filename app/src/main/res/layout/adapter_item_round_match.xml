<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_match"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_round_match_no"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:gravity="center"
        android:padding="8dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:background="#607D8B"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/text_view_round_match_no"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_player1_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/text_view_player2_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
